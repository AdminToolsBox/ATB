#!/bin/bash

DIALOG=${DIALOG=dialog}

tempfile=`tempfile 2>/dev/null` || tempfile=/tmp/test$$
trap "rm -f $tempfile" 0 1 2 5 15

$DIALOG --title "Scanner de ports" \
	--menu "Ce programme vous accompagne dans l'utilisation de la commande nmap.
Que souhaitez-vous faire ?" 15 60 4 \
	1 "Scanner une adresse IP" \
	2 "Scanner une plage d'adresses" \
	3 "???" 2> $tempfile

retour=$?
case $retour in
	0)
		$DIALOG --title "Scanner de ports" \
			--inputbox "Entrez l'adresse IP Ã  scanner" 15 60 2>> $tempfile
		sed -i '1iConstruction de votre commande : ' $tempfile
		clear
		cat $tempfile
		echo		
		;;
	1)
		clear;;
	255)
		clear;;
esac


