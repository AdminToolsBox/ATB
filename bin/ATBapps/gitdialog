#!/bin/bash

## \file git.sh
## \author William Misson
## \brief Git configuration and setup. 
## \version 1.0.8
## \date January 5th 2016

DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Git Set Up and Configuration" \
    --title "Git" \
    --clear \
    --cancel-label "Exit" \
    --menu "Choose what you would like to do :" $HEIGHT $WIDTH 4 \
    "Configuration" "Change your email/nickname/proxy" \
    "Initialisation" "Clone a Git(hub) repository" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    	0 )
      		clear
      		echo "Program terminated."
      	;;
	

	Configuration )
		if [ "git config user.name" != "" ]; then
			response=$(dialog \
			--backtitle "Git Configuration" \
			--title "Git Name already set !" \
			--clear \
			--yesno "You already have a git name : \n Do you want to replace it ?" $HEIGHT $WIDTH 4 \
    			"No" \
    			"Yes" \
		 	2>&1 1>&3)
				 case $response in
					Yes )
			      		clear
			      		echo "Yes"
			      		;;

					No )
			      		clear
			      		echo "Yes"
			      		;;
				esac
				

			
		else
			dialog \
			--backtitle "Git Configuration" \
			--title "Git Name Configuration !" \
			--clear \
			--infobox "Enter your Git Name :" 7 60 \
		        
			git config user.name "$nickname"
		fi
      	;;

	Initialisation )	
		dialog \
		--backtitle "Git Initialisation" \
		--title "Git Initialisation" \
		--clear \
		--yesno "Coucou" 7 60 \
      	;;
  esac
done
clear
